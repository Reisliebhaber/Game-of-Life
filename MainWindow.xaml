<Window x:Class="GameOfLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfLife"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="spielfeld" HorizontalAlignment="Left" Height="230" Margin="170,121,0,0" VerticalAlignment="Top" Width="400"/>
        <Button x:Name="startstop" Content="Start / Stop" HorizontalAlignment="Left" Margin="527,26,0,0" VerticalAlignment="Top" Width="190" Click="start_stop_button" Height="45" FontSize="30" RenderTransformOrigin="0.953,0.889"/>
        <Button Content="Nächster Schritt" HorizontalAlignment="Left" Margin="170,26,0,0" VerticalAlignment="Top" Width="164" RenderTransformOrigin="1.655,0.65" Click="Button_Naester_Schritt_Click" Height="45" FontSize="20"/>
        <Button x:Name="random_button" Content="Random" HorizontalAlignment="Left" Margin="597,121,0,0" VerticalAlignment="Top" Width="120" Click="start_button_Click" Height="44" FontSize="20" RenderTransformOrigin="0.1,0.111"/>

    </Grid>
</Window>
